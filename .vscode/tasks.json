{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate Posters",
      "type": "shell",
      "command": "make",
      "args": [ "posters" ],

      "dependsOn": ["Process SCSS"],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Process SCSS",
      "type": "shell",
      "command": "scss sass/main.scss:assets/css/main.css"
    }
  ]
}
